<Window x:Class="TwitchDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:TwitchDesktopApp.View.UserControls"
        xmlns:local="clr-namespace:TwitchDesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<TextBlock Name="tbTitle" Text="Twitch Utility" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBlock>
        <Button Name="btnRun" Width="100" Height="50" VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Content="Run" FontSize="20" Click="btnRun_Click"></Button>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!-- Menu Bar-->
        <userControls:MenuBar />

        <!-- Content Pane -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <!-- Footer -->
        <Rectangle Grid.Row="2" Fill="Purple"/>
    </Grid>
</Window>
